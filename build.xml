<project name="PureJavaHTTPServer" default="dist" basedir=".">
	<description>
		A Java-based HTTP request parser
	</description>

	<!-- set global properties for this build -->
	<property name="src" location="." />
	<property name="build" location="build" />
	<property name="dist"  location="dist" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init" description="Build the source files" >
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" includeantruntime="false" />
	</target>

	<target name="dist" depends="compile" description="Generate a linkable JAR" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}/lib" />

		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${dist}/lib/PureJavaHTTPServer-${DSTAMP}.jar" basedir="${build}"/>
	</target>

	<target name="clean" description="clean up" >
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>
</project>
